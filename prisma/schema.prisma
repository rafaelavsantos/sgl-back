generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique // garante que o email é único
  password String

  book Book[]
}

model Book {
  id            Int     @id @default(autoincrement())
  titulo        String  @unique
  autor         String? // valores opcionais
  data_inicial  String? // valores opcionais
  quant_page    Int?    // valores opcionais
  data_final    String? // valores opcionais
  leitura_atual Boolean
  status        String? // valores opcionais
  tipo          String? // valores opcionais

  id_user Int

  user User @relation(fields: [id_user], references: [id])
}
